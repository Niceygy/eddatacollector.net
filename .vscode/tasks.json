{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Stop docker container",
      "type": "shell",
      "command": "docker stop eddn_connector",
      "problemMatcher": []
    },
    {
      "label": "Start docker container",
      "type": "shell",
      "command": "docker start eddn_connector",
      "problemMatcher": []
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/eddatacollector.net.csproj", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary;ForceNoAlign"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": ["publish", "${workspaceFolder}/eddatacollector.net.csproj", "/property:GenerateFullPaths=true", "/consoleloggerparameters:NoSummary;ForceNoAlign"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "run", "--project", "${workspaceFolder}/eddatacollector.net.csproj"],
      "problemMatcher": "$msCompile"
    }
  ]
}
